{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"indentStyle": "space",
		"indentWidth": 2,
		"lineEnding": "crlf"
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
